    <gap:splash src="res/screen/ios/ip5_splash/splash_screen640x960.png" 		gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/ipad_splash/splash_screen768x1024.png"      gap:platform="ios"     width="768" height="1024" />
    
    
	
	
